<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<section>
  <form action="/comments" method="POST">
    <div class="form-group">
      <label for="content-input">Leave a comment!</label>
      <textarea class="form-control" id="content-input" rows="3" placeholder="Say something about their gear" name="content"></textarea>
    </div>
    <div class="form-group">
      <label for="rating-input">Rating</label>
      <select class="form-control" id="rating-input" name="rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>
  </form>
</section>
<% if (comment) { comment.forEach( comment => { %> 
    <p>
      <%= comment.content %>
    </p>
    <div>
      <%= comment.rating %>/5
    </div>
    <h3> <%= comment.author %></h3>
  <% })} %>

  <%- include('../partials/footer') %>